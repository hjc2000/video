<JCRazor.WindowComponents.Dialog @ref="_ensure_dialog"
								 DialogClosedEvent="OnNoAsync">
	<div class="root">
		<div class="text-box">
			@if (ChildContent is not null)
			{
				@ChildContent
			}
			else
			{
				@Text
			}
		</div>
		<div class="button-box">
			<button @onclick="OnYesAsync">Yes</button>
			<button @onclick="OnNoAsync">No</button>
		</div>
	</div>
</JCRazor.WindowComponents.Dialog>