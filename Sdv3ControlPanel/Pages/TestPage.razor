@page "/"
@using Sdv3ControlPanel.Data

<div class="root">
	<div>
		<JCRazor.表单.SerialPortSetupFormTable ConnectButtonClickCallback="OnConnecteButtonClickAsync">
		</JCRazor.表单.SerialPortSetupFormTable>
	</div>
	<div class="param-box">
		<JCRazor.表单.FormTable HeadBorderBottom="none">
			<Body>
				<div>P1.01：</div>
				<div>
					<input @bind:get="Database.P1_01" @bind:set="Database.SetP1_01Async" />
				</div>

				<div>P3.01：</div>
				<div>
					<input @bind:get="Database.P3_01" @bind:set="Database.SetP3_01Async" />
				</div>

				<div>P3.09：</div>
				<div>
					<input @bind:get="Database.P3_09" @bind:set="Database.SetP3_09Async" />
				</div>

				<div>P3.10：</div>
				<div>
					<input @bind:get="Database.P3_10" @bind:set="Database.SetP3_10Async" />
				</div>

				<div>P3.11：</div>
				<div>
					<input @bind:get="Database.P3_11" @bind:set="Database.SetP3_11Async" />
				</div>

				<div>P3.12：</div>
				<div>
					<input @bind:get="Database.P3_12" @bind:set="Database.SetP3_12Async" />
				</div>

				<div>通信给定速度：</div>
				<div>
					<input @bind:get="Database.Speed" @bind:set="Database.SetSpeedAsync" />
				</div>
			</Body>
		</JCRazor.表单.FormTable>
		<STButton @onclick="OnEnableButtonClickAsync">使能</STButton>
		<STButton @onclick="OnFwdClickAsync">正转</STButton>
		<div class="enable-light" _enabled="@(Database.Enabled)"></div>
		<JCRazor.表单.FormTable HeadBorderBottom="none">
			<Body>
				<div>反馈当前位置：</div>
				<div>
					<input readonly value="@(Database.FeedbackCurrentPosition)" />
				</div>

				<div>反馈速度：</div>
				<div>
					<input readonly value="@(Database.FeedbackSpeed)" />
				</div>
			</Body>
		</JCRazor.表单.FormTable>
	</div>
</div>